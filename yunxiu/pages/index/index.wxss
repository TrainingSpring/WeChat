/**index.wxss**/
.commodityList{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  max-height: calc(100vh - 150rpx);
  width:calc(100% - 40rpx);
  padding: 0 20rpx 20rpx 20rpx;
}
.space{
  width: 100%;
  height: 20rpx;
  background: #f7f7f7;
}
.commodityList .commodityItem{
  display: flex;
  border-top: 1px solid #f7f7f7;
  flex-direction: row;
  justify-content: center;
  padding:10rpx;
  flex-wrap: nowrap;
  height: 215rpx;
  align-content: center;
}
.commodityList .commodityItem:first-child{
  border-top: none;
}
.commodityList .commodityItem .right{
   flex:1;
  margin-left: 20rpx;
  font-size: 30rpx;
}

.commodityList .commodityItem .left image{
  width: 200rpx;
  height: 137rpx;
  align-self: center;
}
.commodityList .commodityItem view{
  
  align-self: center;
}

.loadMore{
  padding:20rpx 0 50rpx 0 ;
  text-align: center;
  font-size: 30rpx;
  color:#ccc;

}

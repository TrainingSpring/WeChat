/* pages/repair/index.wxss */
image{
  width:100%;
  height:100%;
}
.repairBg{
    background: #f4f4f4;
    min-height: calc(100vh - 20rpx);
    padding-top: 20rpx;
}
.repairBg .hint{
    background: #fff;
    text-align: center;
    line-height: 120rpx;
    font-size:28rpx;
    height: 120rpx;
    margin-bottom: 20rpx;
}
.repairBg .userinfo{
    min-height: calc(100vh - 165rpx);
    background: #fff;
    position:relative;
}
.repairBg .userinfo .inputHandle{
    margin-top: 2rpx;
}
.repairBg .userinfo .upLoadImg{
  display: flex;
  flex-direction: column;
}
.repairBg .userinfo .upLoadImg .imagesFlex{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
}
.repairBg .userinfo .upLoadImg .avatar{
    width:150rpx;
    height: 150rpx;
    background: #e7e7e7;
    text-align: center;
    line-height: 150rpx;
    color: #b5b5b5;
    margin-bottom: 20rpx;
    margin-left: 30rpx;
}
.repairBg .userinfo .upLoadImg .avatar .iconfont{
    font-size: 60rpx !important;
}
.repairBg .userinfo .button{
    width: 94.6666%;
    height: 96rpx;
    background: #008cff;
    text-align: center;
    line-height: 96rpx;
    color: #fff;
    margin-left:2.66665%;
    margin-top: 80rpx;
    margin-bottom: 20rpx;
    font-size: 36rpx;
}
.repairBg .userinfo .upLoadImg .videoFlex .avatar{
    width: calc(100vw - 50rpx);
    height: 400rpx;
}
video{
    width: 100%;height: 100%;
}
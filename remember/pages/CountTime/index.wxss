/* pages/CountTime/index.wxss */
#CountTime{
  width: 100%;
  min-height: 100vh;
  font-size: 12px;
}
#CountTime .view{
  padding-top: 100px;
  margin: 0 auto 40px;
  text-align: center;
  font-size: 66rpx;
}
.hr{
  border-top: 1px solid #999;
  height: 0;
}
.setting{
  margin-top: 15px;
}
.setting .item{
  display: flex;
  flex: 1;
  width: 100%;
  line-height: 24px;
  margin: 10px;
}
.setting .item .value{
  margin-left: 15px;
  flex: 3;
}
.setting .item .key{
  flex: 1;
}
.item .value radio{
  font-size: 12px;
  margin: 5px;
}
.item .value input{
  border: 1px solid #999;
  background-color: white;
  width: 90%;
}
.item .value .play{
  margin: 20px;
  text-align: center;
}
.btn{
  padding: 10px 20px;
  background: #fff;
  display: inline-block;
  /* border-radius: 5px; */
  text-align: center;
}
.btn-success{
  background-color: rgb(41, 122, 243);
  color:#fff;
}
.btn-warning{
  background-color: rgb(243, 122, 41);
  color:#fff;
}
.btn-error{
  background-color: rgb(243, 41, 142);
  color:#fff;
}
.control{
  margin-top: 30px;
  display: flex;
  flex: 1;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 10;
}
.control .btn{
  display: flex;
  flex: 1;
  justify-content: center;
}

.modal{
  background: white;
  border-radius: 5px;
  padding: 5px;
  width: 80%;
}
.modal_mask{
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  background: rgba(0,0,0,0.3);
  top: 0;
  left:0;
  transition: 200ms all;
  opacity: 1;
  z-index: 99;
}
.modal_mask_hide{
  opacity: 0;
  z-index: -1;
}
.modal .modal_title{
  padding: 10px;
  text-align: left;
  font-size: 14px;
  font-weight:bold;
}
.modal_body{
  padding: 10px;
}
.modal_body .remind{
  display: flex;
  justify-content: space-between;
}
.modal_foot{
  display: flex;
  margin-top: 10px;
}
.modal_foot .btn{
  display: flex;
  flex: 1;
  justify-content: center;
}
.bgColor{
  border-top: 1px solid #666;
  padding: 10px;
}
.bgColor .value{
  margin-top: 10px;
  display: flex;  
}
.btn.btn-primary{
  background: rgb(40, 43, 228);
  color: white;
}
.bgColor .key{
  margin-top: 10px;
}
.bgColor .value input{
  background: white;
  height: 40px;
  padding: 0 10px;
  flex: 3;
  align-items: center;
  border: 1px solid #ccc;
}
.bgColor .value .btn{
  justify-content: center;
  align-items: center;
  flex: 1;
}
.scroll{
  width: calc(90% - 10px );
  height: 200px;
  padding: 5px;
  border:1px solid #666;
  border-radius: 5px;
}
.audio .value radio{
  display: flex;
}
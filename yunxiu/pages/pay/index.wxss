/* pages/pay/index.wxss */
.title{
    background: #f5f5f5;
    padding: 20rpx;
    font-size: 22rpx;
    color: #999;
}
.payMode .mode{
    font-size: 26rpx;
    padding:30rpx 55rpx;
    display: flex;
    flex-direction: row;
    align-self: center;
}
.payMode .mode .icon .iconfont{
    font-size: 40rpx;
    color: #3fb53a;
}
.payMode .mode .text{
    margin-left: 25rpx;

}
.payMode .mode .select{
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
}
.payMode .btn{
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 26rpx;
    background: #3398ff;
    position: fixed;
    bottom: 0;
}